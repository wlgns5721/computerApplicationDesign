<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OrderActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/global_color"
            android:textSize="18dp" />

        <EditText
            style="@style/DefaultEditText"
            android:hint="사용자 이름"
            android:id="@+id/consumername_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="주소"
            android:textColor="@color/global_color"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/consumeraddress_text"
            style="@style/DefaultEditText"
            android:hint="주소" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="연락처"
            android:textColor="@color/global_color"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/consumerphonenum_text"
            style="@style/DefaultEditText"
            android:hint="연락처" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제품정보"
            android:textColor="@color/global_color"
            android:layout_marginTop="10dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/itemname_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="수량"
            android:textColor="@color/global_color"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/itemcount_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="옵션"
            android:textColor="@color/global_color"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/itemoption_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="가격"
            android:textColor="@color/global_color"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/itemprice_text"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주문하기"
            android:layout_gravity="bottom"
            android:id="@+id/orderFinal_btn"
            android:textSize="20dp"
            android:background="@color/global_color"
            android:layout_marginBottom="20dp"
            android:textColor="@color/button_text_color"/>
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>