<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProductInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="267dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/c" />
                <TextView
                    android:id="@+id/itemdetail_text"
                    android:layout_below="@+id/item_image"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/global_color"
                    android:textSize="18dp"
                    />
            </RelativeLayout>

        </ScrollView>

        <SlidingDrawer
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:content="@id/content"
            android:handle="@id/handle"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="detail"
                android:background="@color/global_color"
                android:textColor="@color/button_text_color"
                android:id="@+id/handle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/content"
                android:background="@android:color/darker_gray"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="옵션"
                    android:textColor="@color/global_color"
                    android:textSize="18dp"
                    />


                <RadioGroup
                    android:id="@+id/option_radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/option1_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="option1"
                        android:textColor="@color/global_color"
                        android:textSize="18dp"/>

                    <RadioButton
                        android:id="@+id/option2_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="option2"
                        android:textColor="@color/global_color"
                        android:textSize="18dp"/>

                    <RadioButton
                        android:id="@+id/option3_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="option3"
                        android:textColor="@color/global_color"
                        android:textSize="18dp"/>

                </RadioGroup>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/minus_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/button_text_color"
                        android:text="-" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:background="@color/button_text_color"
                        android:textSize="18dp"
                        android:id="@+id/itemcount_text"
                        />
                    <Button
                        android:id="@+id/plus_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/button_text_color"
                        android:text="+" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:textColor="@color/global_color"
                    android:textSize="18dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:id="@+id/itemprice_text"
                    />
                <Button
                    android:id="@+id/order_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@color/global_color"
                    android:textColor="@color/button_text_color"
                    android:text="order" />
            </LinearLayout>
        </SlidingDrawer>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>